<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!-- API 14 theme customizations can go here. or Theme.Holo.Light -->
        
    </style>
    
    
    <style name="CustomActionBarTheme1"
           parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBar1</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar1"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/orange_dark</item>   
    </style>
    
    
    <style name="CustomActionBarTheme2"
           parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBar2</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar2"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/holo_green_dark</item>   
    </style>
    
    
    <style name="CustomActionBarTheme3"
           parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBar3</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar3"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/bar_black</item>   
    </style>
    
    <style name="CustomActionBarTheme4"
           parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBar4</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar4"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/blue</item>   
    </style>
    
</resources>